{
	"name": "frontend",
	"private": true,
	"version": "0.0.1",
	"type": "module",
	"scripts": {
		"dev": "vite dev",
		"dev:backend": "cd ../pb && modd",
		"backend": "AUDITLOG=users,posts,tickets,boards ../backend/entrypoint.sh ./pocketbase --dev serve --publicDir=../sk/build",
		"build": "vite build",
		"build:backend": "cd ../pb && go build",
		"typegen": "pocketbase-typegen --db ../backend/pb_data/data.db --out ./src/lib/pocketbase/generated-types.ts",
		"test": "playwright test",
		"preview": "vite preview",
		"check": "svelte-kit sync && svelte-check --tsconfig ./tsconfig.json",
		"check:watch": "svelte-kit sync && svelte-check --tsconfig ./tsconfig.json --watch",
		"lint": "prettier --check .",
		"format": "prettier --write ."
	},
	"devDependencies": {
		"@sveltejs/adapter-auto": "^4.0.0",
		"@sveltejs/adapter-static": "^3.0.8",
		"@sveltejs/kit": "^2.16.0",
		"@sveltejs/vite-plugin-svelte": "^5.0.0",
		"autoprefixer": "^10.4.20",
		"bits-ui": "1.0.0-next.84",
		"clsx": "^2.1.1",
		"lucide-svelte": "^0.474.0",
		"formsnap": "^2.0.0",
		"pocketbase-typegen": "1.2.1",
		"prettier": "^3.4.2",
		"prettier-plugin-svelte": "^3.3.3",
		"prettier-plugin-tailwindcss": "^0.6.10",
		"sass": "^1.77.1",
		"svelte": "^5.0.0",
		"svelte-check": "^4.0.0",
		"svelte-preprocess": "^5.1.4",
		"sveltekit-superforms": "^2.22.1",
		"tailwind-merge": "^3.0.1",
		"tailwind-variants": "^0.3.1",
		"tailwindcss": "^3.4.17",
		"tailwindcss-animate": "^1.0.7",
		"typescript": "^5.0.0",
		"vite": "^6.0.0",
		"zod": "^3.23.8"
	},
	"dependencies": {
		"pocketbase": "^0.21.2"
	}
}
